{
  "train_batch_size": 512, 
  "train_micro_batch_size_per_gpu": 32,  
  "gradient_accumulation_steps": 2,
  "gradient_checkpointing": true,
  "fp16": {
    "enabled": false
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "gpu",
      "pin_memory": true
    },
    "offload_param": {
      "device": "gpu",
      "pin_memory": true
    }
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-4,
      "weight_decay": 1e-5
    }
  }
}
