{
    "train_batch_size": 32,
    "gradient_accumulation_steps": 4,
    "fp16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      },
      "allgather_partitions": true,
      "allgather_bucket_size": 2e8,
      "reduce_scatter": true,
      "reduce_bucket_size": 2e8
    },
    "steps_per_print": 100,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 5e-7,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    }
  }
  